---
export const prerender = true;

import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Franchise Opportunity - Vantha Vettuvom Salon"
  description="Join the fastest growing luxury salon chain in India. Vantha Vettuvom franchise opportunity offers high ROI and expert support."
>
  <main class="relative font-body text-gray-200">
    <!-- Navbar -->
    <nav
      class="absolute top-0 left-0 w-full z-50 py-6 px-6 lg:px-12 flex justify-between items-center"
    >
      <a
        href="/"
        class="block w-40 md:w-52 grayscale brightness-0 invert opacity-90 hover:opacity-100 transition duration-300"
      >
        <img
          src="/logo1.png"
          alt="Vantha Vettuvom Logo"
          class="w-full h-auto drop-shadow-md"
        />
      </a>
      <a
        href="/blog"
        class="hidden md:block text-white/80 hover:text-gold-400 font-medium tracking-widest text-sm uppercase transition duration-300 bg-black/20 backdrop-blur-sm px-6 py-2 rounded-full border border-white/5 hover:border-gold-500/30"
      >
        Read Blog
      </a>
    </nav>
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
      <!-- Background Image -->
      <div class="absolute inset-0 z-0 select-none">
        <img
          src="/hero-salon.png"
          alt="Luxury Salon Interior - Vantha Vettuvom Franchise"
          class="w-full h-full object-cover opacity-60"
          draggable="false"
        />
        <!-- Overlay for better text readability -->
        <div
          class="absolute inset-0 bg-gradient-to-r from-gray-950 via-gray-950/80 to-transparent"
        >
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-t from-gray-950 via-transparent to-transparent"
        >
        </div>
      </div>

      <div
        class="container mx-auto px-6 lg:px-12 relative z-10 grid lg:grid-cols-12 gap-12 items-center pt-32 lg:pt-20"
      >
        <!-- Text Content -->
        <div
          class="lg:col-span-7 space-y-8 animate-fade-in text-center lg:text-left"
        >
          <div
            class="inline-block px-4 py-1.5 rounded-full border border-gold-500/30 bg-gold-900/20 backdrop-blur-md"
          >
            <span
              class="text-gold-300 font-medium tracking-[0.2em] uppercase text-xs"
              >Premium Franchise Opportunity</span
            >
          </div>

          <h1
            class="text-4xl md:text-6xl lg:text-7xl font-display font-medium leading-none tracking-tight text-white/90"
          >
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-gold-200 via-gold-400 to-gold-600 drop-shadow-xl"
              >Vantha Vettuvom</span
            >
            <br />
            Salon Franchise <br class="hidden lg:block" /> Opportunity in India
          </h1>

          <div
            class="flex items-center gap-4 text-gold-400 font-medium tracking-wide text-sm md:text-base justify-end lg:justify-start"
          >
            <span class="flex items-center gap-2"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
              > 600+ Salons
            </span>
            <span class="w-1.5 h-1.5 rounded-full bg-gold-600"></span>
            <span> #1 in Tamil Nadu</span>
          </div>

          <p
            class="text-gray-300 text-base md:text-lg max-w-xl mx-auto lg:mx-0 leading-relaxed font-light"
          >
            Partner with <span class="font-medium text-white"
              >Vantha Vettuvom</span
            >, the most trusted franchise brand in Tamil Nadu with over <span
              class="text-gold-400 font-medium">600+ locations</span
            >. Own a masterpiece, not just a salon. We provide a proven business
            ecosystem, elite staffing, and a brand that defines opulence.
          </p>

          <div class="hidden lg:flex gap-6 pt-4">
            <a
              href="#inquiry-form"
              class="bg-gradient-to-r from-gold-500 to-gold-700 hover:from-gold-400 hover:to-gold-600 text-white font-medium tracking-wide py-4 px-10 rounded-full transition duration-500 transform hover:scale-105 shadow-[0_0_30px_rgba(204,143,42,0.3)]"
            >
              Become a Partner
            </a>
            <a
              href="#benefits"
              class="relative group overflow-hidden border border-white/20 hover:border-gold-500/50 text-white font-medium py-4 px-10 rounded-full transition duration-300 backdrop-blur-sm"
            >
              <span
                class="absolute w-0 h-0 transition-all duration-500 ease-out bg-white rounded-full group-hover:w-56 group-hover:h-56 opacity-5"
              ></span>
              Learn More
            </a>
          </div>
        </div>

        <!-- Inquiry Form -->
        <div class="lg:col-span-5 relative">
          <!-- Glow effect behind form -->
          <div
            class="absolute -inset-1 bg-gradient-to-r from-gold-500 to-gold-700 rounded-3xl blur opacity-20 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"
          >
          </div>

          <div
            id="inquiry-form"
            class="relative bg-gray-950/80 backdrop-blur-2xl border border-white/10 px-4 py-8 md:p-10 rounded-3xl shadow-2xl w-full mx-auto"
          >
            <div class="mb-8 text-center lg:text-left">
              <h2 class="text-3xl font-display font-bold text-white mb-2">
                Start Your Journey
              </h2>
              <p class="text-gold-200/80 text-sm">
                Request the official franchise brochure & financial model.
              </p>
            </div>

            <form id="franchiseForm" class="space-y-6">
              <div class="space-y-2">
                <label
                  for="name"
                  class="block text-xs font-semibold text-gold-300 uppercase tracking-wider ml-1"
                  >Full Name</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full bg-white/5 border border-white/10 rounded-xl px-5 py-4 focus:outline-none focus:border-gold-500 focus:bg-white/10 transition text-white placeholder-gray-500"
                  placeholder="Name"
                />
              </div>

              <div class="space-y-2">
                <label
                  for="city"
                  class="block text-xs font-semibold text-gold-300 uppercase tracking-wider ml-1"
                  >City / Location</label
                >
                <input
                  type="text"
                  id="city"
                  name="city"
                  required
                  class="w-full bg-white/5 border border-white/10 rounded-xl px-5 py-4 focus:outline-none focus:border-gold-500 focus:bg-white/10 transition text-white placeholder-gray-600"
                  placeholder="Ex. Chennai"
                />
              </div>

              <div class="space-y-2">
                <label
                  for="phone"
                  class="block text-xs font-semibold text-gold-300 uppercase tracking-wider ml-1"
                  >Phone Number</label
                >
                <div class="relative">
                  <div
                    class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
                  >
                    <span class="text-gray-400 font-medium">+91</span>
                  </div>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    pattern="[0-9]{10}"
                    class="w-full bg-white/5 border border-white/10 rounded-xl pl-14 pr-5 py-4 focus:outline-none focus:border-gold-500 focus:bg-white/10 transition text-white placeholder-gray-500"
                    placeholder="98xxxx xxxxx"
                  />
                </div>
              </div>

              <button
                type="submit"
                id="submitBtn"
                class="w-full bg-gradient-to-r from-gold-500 to-gold-700 hover:from-gold-400 hover:to-gold-600 text-white font-bold py-5 rounded-xl transition duration-300 shadow-lg mt-4 flex items-center justify-center group tracking-wide uppercase text-sm"
              >
                <span class="group-hover:translate-x-1 transition-transform"
                  >Submit Inquiry</span
                >
              </button>
              <div
                id="formStatus"
                class="contain-content text-center text-sm mt-3 h-6"
              >
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section id="benefits" class="py-32 bg-gray-950 relative overflow-hidden">
      <!-- Decorational blobs -->
      <div
        class="absolute top-0 left-0 w-[500px] h-[500px] bg-gold-600/5 rounded-full blur-[100px] -translate-x-1/2 -translate-y-1/2 pointer-events-none"
      >
      </div>
      <div
        class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-gold-600/5 rounded-full blur-[100px] translate-x-1/2 translate-y-1/2 pointer-events-none"
      >
      </div>

      <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-20 space-y-6">
          <span
            class="text-gold-500 font-medium tracking-[0.2em] uppercase text-sm"
            >Why Choose Us</span
          >
          <h2 class="text-4xl md:text-6xl font-display font-medium text-white">
            The <span
              class="bg-gradient-to-r from-gold-300 to-gold-600 text-transparent bg-clip-text"
              >Gold Standard</span>
          </h2>
          <p class="text-gray-400 max-w-2xl mx-auto text-lg font-light">
            Join the largest salon network in Tamil Nadu. We don't just set up a
            salon; we build a sustainable legacy with you.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-10">
          <!-- Feature 1 -->
          <div
            class="bg-gray-900/40 px-4 py-8 md:p-10 rounded-2xl border border-white/5 hover:border-gold-500/30 transition duration-500 group"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-gold-500 to-gold-700 rounded-full flex items-center justify-center mb-8 shadow-lg shadow-gold-900/20 group-hover:scale-110 transition duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <h3
              class="text-2xl font-display font-medium mb-4 text-white group-hover:text-gold-400 transition"
            >
              Proven ROI
            </h3>
            <p class="text-gray-400 leading-relaxed font-light">
              Our business model is meticulously designed for high margins and
              operational efficiency.
            </p>
          </div>

          <!-- Feature 2 -->
          <div
            class="bg-gray-900/40 p-10 rounded-2xl border border-white/5 hover:border-gold-500/30 transition duration-500 group"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-gold-500 to-gold-700 rounded-full flex items-center justify-center mb-8 shadow-lg shadow-gold-900/20 group-hover:scale-110 transition duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-2xl font-display font-medium mb-4 text-white group-hover:text-gold-400 transition"
            >
              Elite Staffing
            </h3>
            <p class="text-gray-400 leading-relaxed font-light">
              Access our academy-trained stylists and continuous education
              programs to ensure premium service.
            </p>
          </div>

          <!-- Feature 3 -->
          <div
            class="bg-gray-900/40 p-10 rounded-2xl border border-white/5 hover:border-gold-500/30 transition duration-500 group"
          >
            <div
              class="w-16 h-16 bg-gradient-to-br from-gold-500 to-gold-700 rounded-full flex items-center justify-center mb-8 shadow-lg shadow-gold-900/20 group-hover:scale-110 transition duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6 3 3 0 000 6v6a3 3 0 100-6 3 3 0 000 6z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-2xl font-display font-medium mb-4 text-white group-hover:text-gold-400 transition"
            >
              Hyper-Growth Marketing
            </h3>
            <p class="text-gray-400 leading-relaxed font-light">
              We handle national branding while empowering you with local
              strategies to dominate your market.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Investment & ROI Section -->
    <section
      class="py-24 bg-gray-950 relative overflow-hidden text-center lg:text-left"
    >
      <!-- Background pattern -->
      <div
        class="absolute inset-0 bg-[url('/logo1.png')] bg-center bg-no-repeat opacity-[0.03] scale-150 grayscale blur-sm pointer-events-none"
      >
      </div>

      <div class="container mx-auto px-6 relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Content -->
          <div class="space-y-8 order-2 lg:order-1">
            <div>
              <span
                class="text-gold-500 font-medium tracking-[0.2em] uppercase text-sm"
                >Financial Model</span
              >
              <h2
                class="text-3xl md:text-5xl font-display font-medium text-white mt-4 leading-tight"
              >
                Smart Investment, <br /><span class="text-gold-400"
                  >Superior Returns</span>
              </h2>
            </div>

            <div class="space-y-6">
              <!-- Point 1 -->
              <div class="flex gap-4">
                <div
                  class="mt-1 w-8 h-8 rounded-full bg-gold-900/30 flex items-center justify-center border border-gold-500/20 shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4 text-gold-400"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    ><path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path></svg
                  >
                </div>
                <div>
                  <h4 class="text-xl font-medium text-white">
                    Low Investment Franchise
                  </h4>
                  <p class="text-gray-400 text-sm mt-1">
                    Start your luxury salon journey with an optimized capital
                    requirement designed for accessibility.
                  </p>
                </div>
              </div>

              <!-- Point 2 -->
              <div class="flex gap-4">
                <div
                  class="mt-1 w-8 h-8 rounded-full bg-gold-900/30 flex items-center justify-center border border-gold-500/20 shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4 text-gold-400"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    ><path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path></svg
                  >
                </div>
                <div>
                  <h4 class="text-xl font-medium text-white">
                    Faster Break-Even
                  </h4>
                  <p class="text-gray-400 text-sm mt-1">
                    Our high-efficiency operational model ensures you recover
                    your investment faster than typical premium salons.
                  </p>
                </div>
              </div>

              <!-- Point 3 -->
              <div class="flex gap-4">
                <div
                  class="mt-1 w-8 h-8 rounded-full bg-gold-900/30 flex items-center justify-center border border-gold-500/20 shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4 text-gold-400"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    ><path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path></svg
                  >
                </div>
                <div>
                  <h4 class="text-xl font-medium text-white">
                    Transparent Commercials
                  </h4>
                  <p class="text-gray-400 text-sm mt-1">
                    Clear cost structures with zero hidden charges. We believe
                    in building trust before building business.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Highlight Box -->
          <div class="order-1 lg:order-2">
            <div
              class="bg-gradient-to-br from-gray-900 to-gray-800 p-8 rounded-3xl border border-gold-500/30 relative text-center shadow-2xl shadow-gold-900/10"
            >
              <div
                class="absolute -top-6 left-1/2 -translate-x-1/2 w-12 h-12 bg-gold-500 rounded-full flex items-center justify-center shadow-lg"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-black"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    d="M14.017 21L14.017 18C14.017 16.8954 13.1216 16 12.017 16H6.01699V9C6.01699 6.79086 7.80785 5 10.017 5V3C6.70329 3 4.01699 5.68629 4.01699 9V19C4.01699 20.1046 4.91242 21 6.01699 21H14.017ZM21.017 9V21L19.017 21V9C19.017 8.0772 18.5292 7.22744 17.7554 6.71177C18.2562 6.27365 18.7908 5.67294 19.3175 4.88289C19.8665 4.05948 20.2529 3.22013 20.4852 2.45184L18.5714 1.87323C18.4216 2.36856 18.1098 3.03362 17.6534 3.71816C16.9419 4.78536 15.6548 5.76632 14.017 6.18057V8.29177C15.9818 7.83092 17.017 6.44754 17.017 9H17.267H10.017C10.017 9 10.017 9 10.017 9C10.017 11.2091 11.8079 13 14.017 13H19.017V21H16.017V21.0549C16.643 21.0205 17.017 20.5054 17.017 19V9H21.017Z"
                  ></path></svg
                >
              </div>

              <h3
                class="text-3xl font-display font-medium text-white mb-4 mt-4"
              >
                "The Name is Enough"
              </h3>
              <p class="text-gray-300 italic text-lg leading-relaxed mb-6">
                Our brand power does the marketing for you. <span
                  class="text-gold-400 font-semibold">Vantha Vettuvom</span
                > naturally attracts customers who seek quality and luxury.
              </p>

              <div class="h-px w-24 bg-gold-500/30 mx-auto mb-4"></div>
              <p class="text-xs text-gold-500/80 uppercase tracking-widest">
                Proven Brand Equity
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Locations Section -->
    <section class="py-24 bg-gray-950 relative">
      <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
          <span
            class="text-gold-500 font-medium tracking-[0.2em] uppercase text-sm"
            >Expansion Plan</span
          >
          <h2
            class="text-3xl md:text-5xl font-display font-medium text-white mt-4 mb-6"
          >
            Ideal Locations for <span
              class="bg-gradient-to-r from-gold-300 to-gold-600 text-transparent bg-clip-text"
              >Vantha Vettuvom</span
            > Salon
          </h2>
          <p class="text-gray-400 max-w-2xl mx-auto text-lg font-light">
            We are aggressively conquering the market. Key franchise
            opportunities available in:
          </p>
        </div>

        <div class="space-y-12 max-w-6xl mx-auto">
          <!-- Major Cities -->
          <div>
            <div
              class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3 text-center"
            >
              {
                [
                  "Chennai",
                  "Coimbatore",
                  "Madurai",
                  "Tiruchirappalli (Trichy)",
                  "Salem",
                  "Tirunelveli",
                  "Erode",
                  "Vellore",
                  "Thanjavur",
                  "Dindigul",
                  "Thoothukudi (Tuticorin)",
                  "Nagercoil",
                  "Karur",
                  "Kanchipuram",
                  "Cuddalore",
                ].map((city) => (
                  <div class="p-3 rounded-lg border border-white/10 bg-white/5 hover:bg-gold-500/10 hover:border-gold-500/30 transition duration-300 cursor-default group">
                    <span class="text-gray-300 font-medium text-sm group-hover:text-gold-400 transition">
                      {city}
                    </span>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- District Headquarters -->
          <div>
            <div
              class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3 text-center"
            >
              {
                [
                  "Ariyalur",
                  "Chengalpattu",
                  "Dharmapuri",
                  "Kallakurichi",
                  "Krishnagiri",
                  "Mayiladuthurai",
                  "Nagapattinam",
                  "Namakkal",
                  "Perambalur",
                  "Pudukottai",
                  "Ramanathapuram",
                  "Sivagangai",
                  "Tenkasi",
                  "Theni",
                  "Tirupattur",
                  "Tiruvallur",
                  "Tiruvannamalai",
                  "Tiruvarur",
                  "Virudhunagar",
                ].map((city) => (
                  <div class="p-3 rounded-lg border border-white/5 bg-white/[0.02] hover:bg-gold-500/5 hover:border-gold-500/20 transition duration-300 cursor-default group">
                    <span class="text-gray-400 font-medium text-sm group-hover:text-gold-400 transition">
                      {city}
                    </span>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Fast Growing -->
          <div>
            <div
              class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3 text-center"
            >
              {
                [
                  "Hosur",
                  "Avadi",
                  "Tambaram",
                  "Ambattur",
                  "Pallavaram",
                  "Guduvanchery",
                  "Maraimalai Nagar",
                  "Sriperumbudur",
                  "Oragadam",
                  "Pollachi",
                  "Gobichettipalayam",
                  "Bhavani",
                  "Rasipuram",
                  "Sankagiri",
                  "Arakkonam",
                  "Ranipet",
